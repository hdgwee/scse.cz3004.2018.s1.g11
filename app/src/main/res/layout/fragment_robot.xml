<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="#F5D9D9">

    <EditText
        android:id="@+id/editTextLeft"
        android:layout_width="386dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="Status..."
        android:inputType="none" />

    <!--

    -->
    <GridView
        android:id="@+id/gridview"
        android:layout_width="384dp"
        android:layout_height="258dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:numColumns="15"
        android:scrollbars="none" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|end"
        app:srcCompat="@drawable/ic_refresh_icon" />

    <Button
        android:id="@+id/buttonL1"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="109dp"
        android:text="L1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="109dp" />

    <Button
        android:id="@+id/buttonL2"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-109dp"
        android:layout_toEndOf="@+id/buttonL1"
        android:text="L2"
        tools:ignore="RtlCompat" />

    <Switch
        android:id="@+id/switchMovement"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/buttonL1"
        android:layout_below="@+id/buttonL1"
        android:text="Auto Movement"
        android:layout_alignLeft="@+id/buttonL1" />


    <Switch
        android:id="@+id/switchUpdate"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/buttonL1"
        android:layout_below="@+id/switchMovement"
        android:text="Auto Update"
        android:layout_alignLeft="@+id/buttonL1" />

    <com.andretietz.android.controller.DirectionView
        android:id="@+id/viewDirection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="28dp"
        android:layout_toStartOf="@+id/fab"
        android:layout_toLeftOf="@+id/fab" />

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/buttonStop"
        android:layout_marginBottom="101dp"
        android:text="@string/start"
        android:layout_alignLeft="@+id/buttonStop" />

    <Button
        android:id="@+id/buttonStop"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="71dp"
        android:layout_marginEnd="67dp"
        android:text="@string/stop"
        android:layout_alignParentRight="true"
        android:layout_marginRight="67dp" />


</RelativeLayout>